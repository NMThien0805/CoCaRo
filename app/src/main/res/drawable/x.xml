                <solid android:color="#FF0000" />
                <size
                    android:width="100dp"
                    android:height="50dp"/>
                <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
                to add dashes to your stroke-->
                <stroke
                    android:width="4dp"
                    android:color="#FF0000" />
            </shape>
        </rotate>
    </item>
