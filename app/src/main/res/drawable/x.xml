                <corners
                    android:topRightRadius="80dp"
                    android:topLeftRadius="80dp"
                    android:radius="10dp"/>

                <!--If your shape requires only one solid color-->
                <solid android:color="#FF6666" />
                <size
                    android:width="100dp"
                    android:height="50dp"/>
                <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
                to add dashes to your stroke-->
                <stroke
                    android:width="4dp"
                    android:color="#FF6666" />
            </shape>
        </rotate>
    </item>
    <item
        android:width="9dp"
        android:height="5dp"
        android:left="39dp"
        android:top="-7dp">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45">
            <shape android:shape="oval">
                <corners
                    android:topRightRadius="80dp"
                    android:topLeftRadius="80dp"
                    android:radius="10dp"/>

                <!--If your shape requires only one solid color-->
                <solid android:color="#FF6666" />
